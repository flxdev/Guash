						img(src='https://wubook.net/imgs/default/booking_by_wu.gif', alt='Online Booking System', title='Hotel and tourism technologies', style='border:none;text-decoration:none')
				script.
					var load = false;
					function cbak(){
							var ifrm = document.querySelector('iframe');
							var load = false;
							setInterval(function(){
								if(load === true){
									$('.module-wrapper').removeClass('loading');
									return false
								}
							},100)
							ifrm.onload = function(){
								load = true;
							}

					}
					var WuBook= new _WuBook(1413618257);
					var wbparams= {
						lang: 'ru',
						layout: 'default',
						width: '100%',
						height: 'auto',
						mobile: 0,
						mheight: 0
					};
					WuBook.design_iframe("_wbord_", wbparams,cbak);
